{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "declaration": true,
    "declarationMap": true,
    "diagnostics": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "incremental": true,
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "pretty": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "importsNotUsedAsValues": "error",
    "isolatedModules": true,
    "target": "ES2018",
    "types": ["node"]
  },
  "include": ["src", "test"]
}
