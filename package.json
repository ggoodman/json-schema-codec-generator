{
  "name": "json-schema-codec-generator",
  "version": "0.3.1",
  "description": "Generate typed codec validator code from collections of json-schema",
  "keywords": [
    "json-schema",
    "codegen",
    "cli",
    "typescript",
    "typed"
  ],
  "author": "Geoffrey Goodman",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "bin": {
    "json-schema-codec-generator": "bin/json-schema-codec-generator"
  },
  "browser": {},
  "exports": {
    ".": {
      "node": {
        "require": "./dist/index.js",
        "import": "./dist/index.esm.js"
      },
      "default": "./dist/index.js"
    },
    "./dist/": "./dist/"
  },
  "files": [
    "dist/**/!(tsconfig.tsbuildinfo)"
  ],
  "dependencies": {
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^11.1.0",
    "@rollup/plugin-virtual": "^2.0.3",
    "@wessberg/rollup-plugin-ts": "^1.3.8",
    "ajv": "^7.0.3",
    "fast-glob": "^3.2.5",
    "json-schema-to-dts": "^1.3.0",
    "prettier": "^2.2.1",
    "rollup": "^2.37.1",
    "typescript": "^4.1.3"
  },
  "devDependencies": {
    "@brightcove/kacl": "^0.1.11",
    "@types/jest": "^26.0.20",
    "@types/node": "^10.17.51",
    "gh-release": "^5.0.0",
    "jest": "^26.5.0",
    "kacl": "^1.1.1",
    "ts-jest": "^26.4.4"
  },
  "scripts": {
    "build": "rm -rf dist && rollup -c rollup.config.js",
    "lint": "prettier --check src/**/*",
    "prepack": "npm run build",
    "test": "jest --verbose",
    "posttest": "kacl lint",
    "preversion": "kacl prerelease",
    "version": "kacl release && git add CHANGELOG.md",
    "postversion": "git push && gh-release"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ggoodman/json-schema-codec-generator.git"
  },
  "bugs": {
    "url": "https://github.com/ggoodman/json-schema-codec-generator/issues"
  },
  "homepage": "https://github.com/ggoodman/json-schema-codec-generator#readme",
  "engines": {
    "node": ">=10.16.0"
  },
  "prettier": {
    "arrowParens": "always",
    "printWidth": 100,
    "singleQuote": true
  }
}
